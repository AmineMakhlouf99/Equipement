{% extends 'base.html.twig' %}

{% block title %}collaborateurs{% endblock %}

{% block body %}
<div class="container my-4 mt-5">
    <h2>Liste des Collaborateurs</h2>
    
   <table class="table table-striped" id="myTable">
        <thead>
            <tr>
                <th scope="col" onclick="sortTable(0)">Nom</th>
                <th scope="col" onclick="sortTable(1)">Prénom</th>
                <th scope="col" onclick="sortTable(2)">Poste</th>
                <th scope="col">Actions</th>
            </tr>
        </thead>
        <tbody id="tableBody">
            {% for collaborateur in collaborateurs %}
            <tr>
                <td>{{ collaborateur.nom }}</td>
                <td>{{ collaborateur.prenom }}</td>
                <td>{{ collaborateur.poste }}</td>
                <td>
                    <a href="{{ path('collaborateur.edit', {id: collaborateur.id}) }}" class="btn btn-warning btn-sm">Modifier</a>
                    <a href="{{ path('collaborateur.delete', {id: collaborateur.id}) }}" class="btn btn-danger btn-sm" onclick="return confirm('Êtes-vous sûr de vouloir supprimer ce collaborateur ?');">Supprimer</a>
                    <a href="{{ path('collaborateur.info', {id: collaborateur.id}) }}" class="btn btn-info btn-sm">Plus de détails</a>
                </td>
            </tr>
            {% endfor %}
        </tbody>
    </table>
    <nav>
        <ul class="pagination justify-content-center" id="pagination">
            <!-- Pagination will be generated by JavaScript -->
        </ul>
    </nav>
</div>
<script>
$(document).ready(function() {
    $('#myTable').DataTable();
});
</script>
{% endblock %}
