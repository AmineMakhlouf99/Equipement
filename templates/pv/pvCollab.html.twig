{% extends 'base.html.twig' %}

{% block title %}Affecter Collaborateur{% endblock %}

{% block body %}
<div class="container my-4 mt-5">
    <h2>Affecter un Équipement à un Collaborateur</h2>
    <form action="{{ path('pv.create_collab') }}" method="POST">
        <div class="mb-3">
            <label for="equipment" class="form-label">Équipement (nom matériel || numéro de serie matériel)</label>
            <select class="selectpicker" id="equipment" data-live-search="true" style="z-index: 1050;" name="materiel">
                {% for materiel in materiels %}
                    <option value="{{ materiel.id }}">{{ materiel.nom }} || {{ materiel.numero_serie }}</option>
                {% endfor %}
            </select>
        </div>
        <div class="mb-3">
            <label for="collaborator" class="form-label">Collaborateur (prenom || nom)</label>
            <select class="selectpicker" id="collaborator" data-live-search="true" style="z-index:1;" name="collaborateur">
                {% for collaborateur in collaborateurs %}
                    <option value="{{ collaborateur.id }}">{{ collaborateur.prenom }} || {{ collaborateur.nom }}</option>
                {% endfor %}
            </select>
        </div>
        <div class="mb-3">
            <label for="startDate" class="form-label">Date de début d'affectation</label>
            <input type="date" class="form-control" id="startDate" name="startDate">
        </div>
        <div class="mb-3">
            <label for="endDate" class="form-label">Date de fin d'affectation (facultatif)</label>
            <input type="date" class="form-control" id="endDate" name="endDate">
        </div>
        <div class="mb-3">
            <label for="reason" class="form-label">Motif de l'affectation</label>
            <textarea class="form-control" id="reason" name="reason" rows="3"></textarea>
        </div>
        <button type="submit" class="btn btn-primary">Affecter</button>
    </form>
</div>
{% endblock %}
