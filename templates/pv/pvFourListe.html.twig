{% extends 'base.html.twig' %}

{% block title %}PVs fournisseur {% endblock %}

{% block body %}
<div class="container my-4 mt-5">
    <h2>PVs d'Affectation Fournisseur</h2>
    
    <table class="table table-striped" id="myTable">
        <thead>
            <tr>
                <th scope="col" onclick="sortTable(0)">Nom du Fournisseur</th>
                <th scope="col" onclick="sortTable(1)">Nom du Matériel</th>
                <th scope="col" onclick="sortTable(2)">Type</th>
                <th scope="col" onclick="sortTable(3)">Marque</th>
                <th scope="col" onclick="sortTable(4)">Modèle</th>
                <th scope="col" onclick="sortTable(5)">Numéro de Série</th>
                <th scope="col" onclick="sortTable(6)">Date d'Affectation</th>
                 <th scope="col">Actions</th>
            </tr>
        </thead>
        <tbody id="tableBody" >
            {% for pvAffectation in pvAffectations %}
            <tr>
                <td>{{ pvAffectation.fournisseur.nom_entreprise }}</td>
                <td>{{ pvAffectation.materiel.nom }}</td>
                <td>{{ pvAffectation.materiel.type }}</td>
                <td>{{ pvAffectation.materiel.marque }}</td>
                <td>{{ pvAffectation.materiel.modele }}</td>
                <td>{{ pvAffectation.materiel.numero_serie }}</td>
                <td>{{ pvAffectation.date_debut_affectation|date('Y-m-d') }}</td>
                <td>
                    <a href="{{ path('pv.delete', { id: pvAffectation.id }) }}" class="btn btn-danger btn-sm">Supprimer</a>
                    <a href="{{ path('pv.info', { id: pvAffectation.id }) }}" class="btn btn-info btn-sm">Détails</a>
                </td>
            </tr>
        {% endfor %}    
        </tbody>
    </table>
    <nav>
        <ul class="pagination justify-content-center" id="pagination">
            <!-- Pagination will be generated by JavaScript -->
        </ul>
    </nav>
</div>

<script>
$(document).ready(function() {
    $('#myTable').DataTable();
});
</script>


{% endblock %}