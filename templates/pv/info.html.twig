{% extends 'base.html.twig' %}

{% block title %}Détails de l'Affectation{% endblock %}
{% block style %}
        .container {
            max-width: 800px;
            margin: 0 auto;
            background-color: #fff;
            border: 1px solid #ddd;
            border-radius: 8px;
            padding: 20px;
            box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
        }
        .header {
            text-align: center;
            margin-bottom: 20px;
        }
        .header h1 {
            margin: 0;
            color: #333;
        }
        .section {
            margin-bottom: 20px;
        }
        .section h2 {
            font-size: 1.2em;
            color: #444;
            border-bottom: 1px solid #ddd;
            padding-bottom: 5px;
            margin-bottom: 10px;
        }
        .section p {
            margin: 8px 0;
            line-height: 1.6;
        }
        .label {
            font-weight: bold;
            color: #555;
        }	
{% endblock %}
{% block body %}
    <div class="container mt-5">
        <div class="header">
            <h1>Procès-Verbal d'Affectation</h1>
        </div>
         
        <!-- Collaborator Section -->
        <div class="section">
        {% if pvAffectation.collaborateur %}
            <h2>Collaborateur</h2>
            <p><span class="label">Nom:</span> {{ pvAffectation.collaborateur.nom }} {{ pvAffectation.collaborateur.prenom }}</p>
            <p><span class="label">Poste:</span> {{ pvAffectation.collaborateur.poste }}</p>
            <p><span class="label">Département:</span> {{ pvAffectation.collaborateur.departement }}</p>
            <p><span class="label">Email:</span> {{ pvAffectation.collaborateur.email }}</p>
            <p><span class="label">Téléphone:</span> {{ pvAffectation.collaborateur.telephone }}</p>
            <p><span class="label">Date d'embauche:</span> {{ pvAffectation.collaborateur.dateEmbauche|date("d/m/Y") }}</p>
            <p><span class="label">Statut:</span> {{ pvAffectation.collaborateur.status }}</p>
        {% elseif pvAffectation.fournisseur  %}
            <h2> Fournisseur </h2>
            <p><span class="label">Nom :</span> {{ pvAffectation.fournisseur.nomentreprise }}</p>
            <p><span class="label">Contact :</span> {{ pvAffectation.fournisseur.contactprincipal }}</p>
            <p><span class="label">Adresse :</span> {{ pvAffectation.fournisseur.adresse }}</p>
            <p><span class="label">Email :</span> {{ pvAffectation.fournisseur.email }}</p>
            <p><span class="label">type service  :</span> {{ pvAffectation.fournisseur.typeservice }}</p>
        {% endif %}
        </div>
    
        <!-- Material Section -->
        <div class="section">
            <h2>Matériel</h2>
            <p><span class="label">Nom:</span> {{ pvAffectation.materiel.nom }}</p>
            <p><span class="label">Type:</span> {{ pvAffectation.materiel.type }}</p>
            <p><span class="label">Marque:</span> {{ pvAffectation.materiel.marque }}</p>
            <p><span class="label">Modèle:</span> {{ pvAffectation.materiel.modele }}</p>
            <p><span class="label">Numéro de Série:</span> {{ pvAffectation.materiel.numeroserie }}</p>
            <p><span class="label">État:</span> {{ pvAffectation.materiel.etat }}</p>
            <p><span class="label">Disponibilité:</span> {{ pvAffectation.materiel.disponibilite }}</p>
            <p><span class="label">Date d'Acquisition:</span> {{ pvAffectation.materiel.dateacquisition|date("d/m/Y") }}</p>
            <p><span class="label">Valeur:</span> {{ pvAffectation.materiel.valeurmateriel }} €</p>
            <p><span class="label">Description:</span> {{ pvAffectation.materiel.description }}</p>
        </div>

        <!-- Assignment Report Section -->
        <div class="section">
            <h2>Détails de l'Affectation</h2>
            <p><span class="label">Date de Début d'Affectation:</span> {{ pvAffectation.datedebutaffectation|date("d/m/Y") }}</p>
            <p><span class="label">Date de Fin d'Affectation:</span> {{ pvAffectation.datefinaffectation ? pvAffectation.datefinaffectation|date("d/m/Y") : 'Non définie' }}</p>
            <p><span class="label">Date de Retour:</span> {{ pvAffectation.dateRetour ? pvAffectation.dateretour|date("d/m/Y") : '/' }}</p>
            <p><span class="label">Motif d'Affectation:</span> {{ pvAffectation.motifaffectation }}</p>
        </div>
    </div>
{% endblock %}
