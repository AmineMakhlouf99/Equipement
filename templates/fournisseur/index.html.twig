{% extends 'base.html.twig' %}

{% block title %}Liste des Fournisseurs{% endblock %}

{% block body %}
<div class="container my-4 mt-5">
    <h2>Liste des Fournisseurs</h2>
    
    <table class="table table-striped" id="myTable">
        <thead>
            <tr>
                <th scope="col" onclick="sortTable(0)">Nom du Fournisseur</th>
                <th scope="col" onclick="sortTable(1)">Contact</th>
                <th scope="col">Actions</th>
            </tr>
        </thead>
        <tbody id="tableBody">
        {% for fournisseur in fournisseurs %}
            <tr>
                <td>{{ fournisseur.nomentreprise }}</td>
                <td>{{ fournisseur.contactprincipal }}</td>
                <td>
                    <a href="{{ path('fournisseur.edit', {id: fournisseur.id}) }}" class="btn btn-warning btn-sm">Modifier</a>
                    <a href="{{ path('fournisseur.delete', {id: fournisseur.id}) }}" class="btn btn-danger btn-sm" onclick="return confirm('Êtes-vous sûr de vouloir supprimer ce fournisseur ?');">Supprimer</a>
                    <a href="{{ path('fournisseur.info', {id: fournisseur.id}) }}" class="btn btn-info btn-sm">Plus de détails</a>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
    <nav>
        <ul class="pagination justify-content-center" id="pagination">
            <!-- Pagination will be generated by JavaScript -->
        </ul>
    </nav>
</div>
<script>
$(document).ready(function() {
    $('#myTable').DataTable();
});
</script>
{% endblock %}
