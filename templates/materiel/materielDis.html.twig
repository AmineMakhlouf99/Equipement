{% extends 'base.html.twig' %}

{% block title %}Materiel disponible{% endblock %}

{% block body %}
<div class="container my-4 mt-5">
    <h2>Liste des Materiels Disponibles</h2>
    
    <!-- Search Bar -->
    

    <!-- Data Table -->
   <table class="table table-striped" id="myTable">
        <thead class="thead-dark">
            <tr>
                <th scope="col" onclick="sortTable(0)">Nom de Materiel</th>
                <th scope="col" onclick="sortTable(1)">Type</th>
                <th scope="col" onclick="sortTable(2)">Marque</th>
                <th scope="col" onclick="sortTable(3)">Modèle</th>
                <th scope="col" onclick="sortTable(4)">Numéro de Série</th>
                <th scope="col">Actions</th>
            </tr>
        </thead>
        <tbody id="tableBody">
            {% for materiel in materiels %}
            <tr>
                <td>{{ materiel.nom }}</td>
                <td>{{ materiel.type }}</td>
                <td>{{ materiel.marque }}</td>
                <td>{{ materiel.modele }}</td>
                <td>{{ materiel.numeroserie }}</td>
                <td>
                    <a href="{{ path('materiel.info',{id: materiel.id}) }}" class="btn btn-primary btn-sm">Détails</a>
                  
                </td>
            </tr>
            {% endfor %}
        </tbody>
    </table>

    <!-- Pagination -->
    <nav>
        <ul class="pagination justify-content-center" id="pagination">
            <!-- Pagination will be generated by JavaScript -->
        </ul>
    </nav>
</div>

<!-- JavaScript for Data Table Functionality -->
<script>
$(document).ready(function() {
    $('#myTable').DataTable();
});
</script>

{% endblock %}
