{% extends 'base.html.twig' %}

{% block title %}Materiels{% endblock %}

{% block body %}
<div class="container my-4 mt-5">
    <h2 >Liste des Materiels</h2>
    
   <table class="table table-striped" id="myTable">
        <thead>
            <tr>
                <th scope="col" onclick="sortTable(0)">Nom de Materiel</th>
                <th scope="col" onclick="sortTable(1)">Numero de Serie</th>
                <th scope="col" onclick="sortTable(2)">Type</th>
                <th scope="col" onclick="sortTable(3)">Disponibilité</th>
                <th scope="col">Actions</th>
            </tr>
        </thead>
        <tbody id="tableBody">
         {%for materiel in materiels%}
            <tr>
                <td> {{ materiel.nom }} </td>
                <td> {{  materiel.numeroserie }} </td>
                <td> {{  materiel.type }} </td>
                <td> {{  materiel.disponibilite }} </td>
                <td>
                    <a href="{{ path('materiel.edit', {id: materiel.id}) }}" class="btn btn-warning btn-sm">
                    Modifier
                    </a>
                     <a href="{{ path('materiel.delete', {id: materiel.id}) }}" class="btn btn-danger btn-sm" 
                         onclick="return confirm('Êtes-vous sûr de vouloir supprimer ce matériel ?')";>
                    Supprimer
                    </a>
                    <a href="{{ path('materiel.info', {id: materiel.id}) }}" class="btn btn-info btn-sm">Plus de détails</a>
                </td>
            </tr>
        {% endfor %}    
        </tbody>
    </table>
    <nav>
        <ul class="pagination justify-content-center" id="pagination">
            <!-- Pagination will be generated by JavaScript -->
        </ul>
    </nav>
</div>
<script>
$(document).ready(function() {
    $('#myTable').DataTable();
});
</script>
{% endblock %}
