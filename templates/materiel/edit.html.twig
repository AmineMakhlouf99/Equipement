{% extends 'base.html.twig' %}

{% block title %}Modifier materiel{% endblock %}

{% block body %}
<div class="container my-4 mt-5">
    <h2>Modifier materiel</h2>
    <form method="POST" action="{{ path('materiel.edit', {id: materiel.id}) }}">
        <div class="mb-3">
            <label for="equipmentName" class="form-label">Nom materiel</label>
            <input type="text" class="form-control" id="equipmentName" name="nom" value="{{ materiel.nom }}" placeholder="Nom de materiel">
        </div>
        <div class="mb-3">
            <label for="type" class="form-label">Type</label>
            <input type="text" class="form-control" id="type" name="type" value="{{ materiel.type }}" placeholder="Type de materiel">
        </div>
        <div class="mb-3">
            <label for="brand" class="form-label">Marque</label>
            <input type="text" class="form-control" id="brand" name="marque" value="{{ materiel.marque }}" placeholder="Marque">
        </div>
        <div class="mb-3">
            <label for="model" class="form-label">Modèle</label>
            <input type="text" class="form-control" id="model" name="modele" value="{{ materiel.modele }}" placeholder="Modèle">
        </div>
        <div class="mb-3">
            <label for="serialNumber" class="form-label">Numéro de série</label>
            <input type="text" class="form-control" id="serialNumber" name="numero_serie" value="{{ materiel.numeroserie }}" placeholder="Numéro de série">
        </div>
        <div class="mb-3">
            <label for="acquisitionDate" class="form-label">Date d'acquisition</label>
            <input type="date" class="form-control" name="date_acquisition" id="acquisitionDate" value="{{ materiel.dateacquisition|date('Y-m-d') }}">
        </div>
        <div class="mb-3">
            <label for="availabilityStatus" class="form-label">Statut de disponibilité</label>
            <select class="form-select" name="disponibilite" id="availabilityStatus">
                <option value="Disponible" {% if materiel.disponibilite == 'Disponible' %}selected{% endif %}>Disponible</option>
                <option value="Affecté" {% if materiel.disponibilite == 'Affecté' %}selected{% endif %}>Affecté</option>
                <option value="En maintenance" {% if materiel.disponibilite == 'En maintenance' %}selected{% endif %}>En maintenance</option>
            </select>
        </div>
        <div class="mb-3">
            <label for="conditionStatus" class="form-label">Statut de condition</label>
            <select class="form-select" name="etat" id="conditionStatus">
                <option value="Indéfectueux" {% if materiel.etat == 'Indéfectueux' %}selected{% endif %}>Indéfectueux</option>
                <option value="Défectueux" {% if materiel.etat == 'Défectueux' %}selected{% endif %}>Défectueux</option>
            </select>
        </div>
        <div class="mb-3">
            <label for="description" class="form-label">Description</label>
            <textarea class="form-control" name="description" id="description" rows="3">{{ materiel.description }}</textarea>
        </div>
        <div class="mb-3">
            <label for="value" class="form-label">Valeur de materiel</label>
            <input type="number" class="form-control" id="value" name="valeur_materiel" value="{{ materiel.valeurmateriel }}" placeholder="Valeur en devise">
        </div>
        <button type="submit" class="btn btn-primary">Enregistrer</button>
    </form>
</div>
{% endblock %}
